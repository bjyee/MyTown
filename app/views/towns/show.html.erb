<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @town.name %>
</p>

<p>
  <b>State:</b>
  <%= @town.state %>
</p>

<p>
  <b>Description:</b>
  <%= @town.description %>
</p>

<p>
  <b>Lat:</b>
  <%= @town.lat %>
</p>

<p>
  <b>Lon:</b>
  <%= @town.lon %>
</p>

<p>
<b>Attractions in <%= @town.name %>:</b>
	<ol>
		<% for attraction in @attraction %>
			<li><%= attraction.name %> - <%= attraction.street %></li>
		<% end %>
	</ol>
</p>


<%= link_to 'Edit', edit_town_path(@town) %> |
<%= link_to 'Back', towns_path %>
