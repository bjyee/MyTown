<h1>Listing towns</h1>

<table>
  <tr>
    <th>Name</th>
    <th>State</th>
    <th>Description</th>
    <th>Lat</th>
    <th>Lon</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @towns.each do |town| %>
  <tr>
    <td><%= town.name %></td>
    <td><%= town.state %></td>
    <td><%= town.description %></td>
    <td><%= town.lat %></td>
    <td><%= town.lon %></td>
    <td><%= link_to 'Show', town %></td>
    <td><%= link_to 'Edit', edit_town_path(town) %></td>
    <td><%= link_to 'Destroy', town, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

